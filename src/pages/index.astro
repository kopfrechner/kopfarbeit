---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import Bottle from "@/components/pixel/Bottle.astro";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts).filter(({ data }) => !data.archived);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <div class="relative overflow-hidden border-neo bg-card-bg p-12 shadow-neo">
      <div
        class="absolute -right-4 -bottom-6 rotate-12 opacity-30 transition-transform duration-500 hover:scale-110 sm:opacity-100"
      >
        <Bottle class="size-48" />
      </div>

      <section id="hero" class:list={["relative z-10 max-w-2xl py-8"]}>
        <h1
          class="my-4 font-heading text-5xl leading-[0.9] font-bold tracking-tighter uppercase sm:my-8 sm:text-7xl"
        >
          Sodazitron: <span class="bg-fizz px-2 text-ink">Freshly Squeezed</span
          > Code & Thoughts
        </h1>

        <p class="text-xl leading-tight font-bold sm:text-2xl">
          Refreshing perspectives on software engineering, AI, and digital
          craftsmanship.
        </p>
        <div class="mt-10 flex flex-wrap gap-4">
          <LinkButton
            href="/posts/"
            variant="button"
            class="bg-fizz px-8 py-3 text-lg font-bold text-ink"
          >
            READ BLOG
          </LinkButton>
          <LinkButton
            href="/about/"
            variant="button"
            class="border-neo bg-card-bg px-8 py-3 text-lg font-bold shadow-neo"
          >
            ABOUT ME
          </LinkButton>
        </div>
      </section>
    </div>

    {
      featuredPosts.length > 0 && (
        <section id="featured" class:list={["pt-16 pb-8"]}>
          <div class="inline-block border-neo bg-zest px-6 py-2 shadow-neo">
            <h2 class="font-heading text-2xl font-bold tracking-wider text-ink uppercase">
              Featured
            </h2>
          </div>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-16 pb-8">
          <div class="inline-block border-neo bg-zest px-6 py-2 shadow-neo">
            <h2 class="font-heading text-2xl font-bold tracking-wider text-ink uppercase">
              Recent Posts
            </h2>
          </div>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-12 text-center">
      <LinkButton
        href="/posts/"
        variant="button"
        class="px-8 py-3 text-lg font-bold tracking-widest uppercase"
      >
        All Posts
        <IconArrowRight class="ml-2 inline-block size-6 rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
