---
import type { MarkdownLayoutProps } from "astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";

import Layout from "./Layout.astro";
import { SITE } from "@/config";

type Props = MarkdownLayoutProps<{ title: string; description?: string }>;

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />
  {SITE.showBreadcrumbs && <Breadcrumb />}
  <main id="main-content" class="app-layout">
    <div class="mb-8 border-neo bg-card-bg p-8 shadow-neo">
      <h1
        class="font-heading text-3xl leading-[0.9] tracking-tighter text-ink uppercase sm:text-5xl"
      >
        <span class="bg-fizz px-2">{frontmatter.title}</span>
      </h1>
      <p class="mt-6 italic">{frontmatter.description}</p>
    </div>
    <div
      id="about"
      class="app-prose mb-28 flow-root max-w-app border-neo bg-card-bg p-8 shadow-neo prose-img:border-0"
    >
      <slot />
    </div>
  </main>
  <Footer />
</Layout>
