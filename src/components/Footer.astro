---
import type { HTMLAttributes } from "astro/types";
import Socials from "./Socials.astro";
import LinkButton from "./LinkButton.astro";
import { Image } from "astro:assets";
import euFlag from "@/assets/images/eu-flag.svg";
import { SITE } from "@/config";

const currentYear = new Date().getFullYear();

type Props = {
  noMarginTop?: boolean;
} & HTMLAttributes<"footer">;

const { noMarginTop = false, class: className, ...attrs } = Astro.props;
---

<footer
  class:list={["app-layout", { "mt-auto": !noMarginTop }, className]}
  {...attrs}
>
  <div
    class:list={[
      "border-neo bg-card-bg p-8 shadow-neo",
      "flex flex-col items-center justify-center space-y-6",
      "mb-8 text-base font-bold tracking-tight uppercase",
    ]}
  >
    <div class="flex flex-col items-center space-y-4">
      <span class="font-heading text-2xl tracking-tighter">
        {SITE.title}
      </span>
      <Socials />
    </div>

    <div
      class="flex flex-col items-center justify-center gap-y-2 text-center text-sm sm:flex-row sm:gap-x-4 sm:gap-y-0"
    >
      <div class="flex flex-col items-center sm:flex-row sm:gap-x-2">
        <span>&#169; {currentYear}</span>
        <span class="hidden sm:inline">|</span>
        <span>Freshly Squeezed</span>
      </div>

      <span class="hidden sm:inline">|</span>

      <div class="flex flex-col items-center sm:flex-row sm:gap-x-2">
        <span class="flex items-center gap-x-2">
          <Image
            src={euFlag}
            alt="EU Flag"
            class="inline-block h-auto w-6 border border-ink"
          />
          EU HOSTED
        </span>
        <span class="hidden sm:inline">|</span>
        <span class="flex items-center gap-x-1">
          POWERED BY
          <LinkButton
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="underline-offset-4 hover:text-accent"
          >
            ASTRO
          </LinkButton>
        </span>
      </div>
    </div>
  </div>
</footer>
