---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 32 32"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={["inline-block", className]}
>
  <!-- Cap -->
  <path d="M12 1h8v3h-8V1z" fill="var(--border)" />
  <rect x="13" y="2" width="6" height="1" fill="white" fill-opacity="0.3" />

  <!-- Bottle Outline -->
  <path 
    fill-rule="evenodd" 
    clip-rule="evenodd" 
    d="M13 4H19V8L23 12V27L21 29H11L9 27V12L13 8V4ZM15 4H17V8L21 12V27H11V12L15 8V4H15Z" 
    fill="var(--border)" 
  />

  <!-- Liquid (Fizz) -->
  <path d="M15 6H17V8L21 12V27H11V12L15 8V6Z" fill="#00F0FF" />
  
  <!-- Label -->
  <rect x="11" y="17" width="10" height="6" fill="var(--zest)" />
  <rect x="12" y="18" width="8" height="1" fill="white" fill-opacity="0.4" />
  <rect x="12" y="21" width="5" height="1" fill="var(--ink)" fill-opacity="0.1" />

  <!-- Bubbles -->
  <rect x="12" y="14" width="1" height="1" fill="white" />
  <rect x="19" y="15" width="1" height="1" fill="white" />
  <rect x="14" y="25" width="1" height="1" fill="white" />
  <rect x="18" y="11" width="1" height="1" fill="white" fill-opacity="0.5" />

  <!-- Reflections -->
  <path d="M10 13v13l1 1v-14h-1z" fill="white" fill-opacity="0.3" />
  <path d="M15 4v4h1V4h-1z" fill="white" fill-opacity="0.2" />
  <path d="M13 10h6l-1 1h-4l-1-1z" fill="white" fill-opacity="0.2" />
</svg>