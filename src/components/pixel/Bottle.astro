---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 16 16"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={["inline-block", className]}
>
  <!-- Cap -->
  <rect x="6" y="1" width="4" height="2" fill="var(--border)" />
  
  <!-- Neck -->
  <rect x="7" y="3" width="2" height="3" fill="var(--border)" />
  <rect x="7" y="3" width="1" height="3" fill="var(--fizz)" />
  
  <!-- Body -->
  <rect x="5" y="6" width="6" height="8" fill="var(--border)" />
  <rect x="6" y="7" width="4" height="6" fill="var(--fizz)" />
  
  <!-- Label -->
  <rect x="6" y="9" width="4" height="2" fill="var(--zest)" />
</svg>
