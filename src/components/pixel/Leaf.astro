---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 16 16"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={["inline-block", className]}
>
  <!-- Outline -->
  <rect x="7" y="2" width="2" height="1" fill="var(--border)" />
  <rect x="5" y="3" width="6" height="1" fill="var(--border)" />
  <rect x="4" y="4" width="8" height="1" fill="var(--border)" />
  <rect x="3" y="5" width="10" height="4" fill="var(--border)" />
  <rect x="4" y="9" width="8" height="1" fill="var(--border)" />
  <rect x="5" y="10" width="6" height="1" fill="var(--border)" />
  <rect x="7" y="11" width="2" height="3" fill="var(--border)" />

  <!-- Fill (Zest) -->
  <rect x="7" y="3" width="2" height="1" fill="var(--zest)" />
  <rect x="5" y="4" width="6" height="1" fill="var(--zest)" />
  <rect x="4" y="5" width="8" height="4" fill="var(--zest)" />
  <rect x="5" y="9" width="6" height="1" fill="var(--zest)" />
  <rect x="7" y="10" width="2" height="1" fill="var(--zest)" />
  
  <!-- Stem -->
  <rect x="8" y="11" width="1" height="3" fill="var(--border)" />
</svg>
