---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 16 16"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={["inline-block", className]}
>
  <!-- Outline -->
  <rect x="5" y="3" width="6" height="1" fill="var(--border)" />
  <rect x="4" y="4" width="1" height="1" fill="var(--border)" />
  <rect x="11" y="4" width="1" height="1" fill="var(--border)" />
  <rect x="3" y="5" width="1" height="6" fill="var(--border)" />
  <rect x="12" y="5" width="1" height="6" fill="var(--border)" />
  <rect x="4" y="11" width="1" height="1" fill="var(--border)" />
  <rect x="11" y="11" width="1" height="1" fill="var(--border)" />
  <rect x="5" y="12" width="6" height="1" fill="var(--border)" />
  
  <!-- Fill (Zest) -->
  <rect x="5" y="4" width="6" height="1" fill="var(--zest)" />
  <rect x="4" y="5" width="8" height="6" fill="var(--zest)" />
  <rect x="5" y="11" width="6" height="1" fill="var(--zest)" />
  
  <!-- Highlights/Details -->
  <rect x="6" y="6" width="1" height="1" fill="white" fill-opacity="0.3" />
  <rect x="7" y="5" width="2" height="1" fill="white" fill-opacity="0.2" />
</svg>
