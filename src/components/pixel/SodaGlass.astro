---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 -4 32 36"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={["inline-block", className]}
>
  <!-- Glass Outline (Back Rim) -->
  <path d="M8 4h16v2H8V4z" fill="var(--border)" />
  
  <!-- Liquid (Fizz) -->
  <path d="M10 6h12v18l-1 2H11l-1-2V6z" fill="#00F0FF" />
  
  <!-- Mint Leaves -->
  <path d="M11 9l3 3h-2l-2-2v-1z" fill="#2ECC71" />
  <path d="M13 14l4 4h-2l-2-2v-2z" fill="#27AE60" />
  
  <!-- Ice Cubes -->
  <rect x="14" y="10" width="4" height="4" fill="white" fill-opacity="0.3" />
  <rect x="12" y="18" width="4" height="4" fill="white" fill-opacity="0.2" />
  
  <!-- Lemon Slice in Glass -->
  <circle cx="20" cy="12" r="3" fill="var(--zest)" />
  <circle cx="20" cy="12" r="2" fill="white" fill-opacity="0.5" />

  <!-- Straw (Solid Red) -->
  <path d="M23.3 -4l-9.6 29h2l9.6-29h-2z" fill="#FF5252" />
  
  <!-- Straw Stripes (Solid White) -->
  <path d="M22.6 -2l-0.7 2h2l0.7-2h-2zM21.3 2l-0.7 2h2l0.7-2h-2z" fill="white" />
  <path d="M20 6l-0.7 2h2l0.7-2h-2zM18.7 10l-0.7 2h2l0.7-2h-2zM17.4 14l-0.7 2h2l0.7-2h-2zM16.1 18l-0.7 2h2l0.7-2h-2zM14.8 22l-0.7 2h2l0.7-2h-2z" fill="white" />
  
  <!-- Bubbles -->
  <rect x="11" y="22" width="1" height="1" fill="white" />
  <rect x="15" y="20" width="1" height="1" fill="white" />
  <rect x="19" y="17" width="1" height="1" fill="white" />
  
  <!-- Glass Outline (Main) -->
  <path 
    fill-rule="evenodd" 
    clip-rule="evenodd" 
    d="M8 4V6L10 24L11 26H21L22 24L24 6V4H8ZM10 6H22L20.2 24H11.8L10 6Z" 
    fill="var(--border)" 
  />
  
  <!-- Glass Reflections -->
  <path d="M9 6v18l1 1V6H9z" fill="white" fill-opacity="0.2" />
</svg>