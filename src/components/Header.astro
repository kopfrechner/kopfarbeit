---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};
---

<a
  id="skip-to-content"
  href="#main-content"
  class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
>
  Skip to content
</a>

<header
  class="app-layout mt-8 flex flex-col items-center justify-between md:flex-row"
>
  <div
    id="top-nav-wrap"
    class:list={[
      "py-4 sm:py-6",
      "mb-4",
      "relative w-full border-neo bg-zest p-6 text-ink shadow-neo",
      "flex flex-wrap items-center justify-between",
    ]}
  >
    <a
      href="/"
      class="py-1 text-xl leading-8 whitespace-nowrap text-ink transition-all duration-200 md:my-auto md:text-3xl md:leading-none"
    >
      <span class="font-heading tracking-tighter uppercase"
        ><span id="typewriter-title">&gt; {SITE.title}_</span></span
      >
    </a>
    <button
      id="menu-btn"
      class="focus-outline border-neo bg-background p-2 text-foreground shadow-neo md:hidden"
      aria-label="Open Menu"
      aria-expanded="false"
      aria-controls="menu-items"
    >
      <IconX id="close-icon" class="hidden" />
      <IconMenuDeep id="menu-icon" />
    </button>
    <nav id="nav-menu" class="w-full md:ms-2 md:block md:w-auto">
      <ul
        id="menu-items"
        class:list={[
          "mt-4 w-full grid-cols-2 place-content-center gap-4 md:mt-0 md:flex md:w-auto md:gap-x-0 md:gap-y-0",
          "[&>li>a]:flex [&>li>a]:items-center [&>li>a]:justify-center [&>li>a]:px-6 [&>li>a]:py-3 [&>li>a]:font-bold [&>li>a]:tracking-widest [&>li>a]:text-foreground [&>li>a]:uppercase [&>li>a]:hover:opacity-75 md:[&>li>a]:px-4 md:[&>li>a]:py-2 md:[&>li>a]:text-ink",
          "hidden md:flex [&:not(.hidden)]:grid",
        ]}
      >
        <li class="col-span-2 md:col-span-1">
          <a
            href="/posts"
            class:list={["nav-item", { "active-nav": isActive("/posts") }]}
          >
            Posts
          </a>
        </li>
        <li class="col-span-2 md:col-span-1">
          <a
            href="/tags"
            class:list={["nav-item", { "active-nav": isActive("/tags") }]}
          >
            Tags
          </a>
        </li>
        <li class="col-span-2 md:col-span-1">
          <a
            href="/about"
            class:list={["nav-item", { "active-nav": isActive("/about") }]}
          >
            About
          </a>
        </li>
        {
          SITE.showArchives && (
            <li class="col-span-2 md:col-span-1">
              <LinkButton
                href="/archives"
                class:list={[
                  "focus-outline flex justify-center nav-item p-3 text-foreground hover:opacity-75 md:p-1 md:text-ink",
                  {
                    "active-nav": isActive("/archives"),
                  },
                ]}
                title="Archives"
                aria-label="archives"
              >
                <IconArchive class="hidden md:inline-block" />
                <span class="text-center font-bold tracking-widest uppercase md:sr-only">
                  Archives
                </span>
              </LinkButton>
            </li>
          )
        }
        <li class="flex items-center justify-center">
          <LinkButton
            href="/search"
            class:list={[
              "focus-outline flex h-12 w-full items-center justify-center nav-item text-foreground hover:opacity-75 md:h-auto md:p-1 md:text-ink",
              {
                "underline decoration-4 underline-offset-8":
                  isActive("/search"),
              },
            ]}
            title="Search"
            aria-label="search"
          >
            <IconSearch />
            <span class="sr-only">Search</span>
          </LinkButton>
        </li>
        {
          SITE.lightAndDarkMode && (
            <li class="flex items-center justify-center">
              <button
                id="theme-btn"
                class="focus-outline relative flex h-12 w-full items-center justify-center border-neo bg-background text-foreground shadow-neo transition-all md:size-10 md:border-2 md:shadow-[4px_4px_0px_var(--shadow-color)]"
                title="Toggles light & dark"
                aria-label="auto"
                aria-live="polite"
              >
                <div class="relative size-5 md:size-5">
                  <IconMoon class="absolute top-[50%] left-[50%] size-5 -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] size-5 -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </div>
                <span class="sr-only">Toggle Theme</span>
              </button>
            </li>
          )
        }
      </ul>
    </nav>
  </div>
</header>

<script>
  import { SITE } from "@/config";
  import Typewriter from "typewriter-effect/dist/core";

  function initNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (menuBtn && menuItems && menuIcon && closeIcon) {
      menuBtn.addEventListener("click", () => {
        const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

        menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
        menuBtn.setAttribute(
          "aria-label",
          openMenu ? "Open Menu" : "Close Menu"
        );

        menuItems.classList.toggle("hidden");
        menuIcon.classList.toggle("hidden");
        closeIcon.classList.toggle("hidden");
      });
    }
  }

  function initTypewriter() {
    const container = document.querySelector("#typewriter-title");
    if (container && typeof Typewriter !== "undefined") {
      new Typewriter(container, {
        loop: false,
        cursor: "_",
        delay: 75,
      })
        .deleteAll(0)
        .typeString(`> ${SITE.title}`)
        .start();
    }
  }

  // Animate only on first entry
  initTypewriter();

  // Initialize nav on entry and on every view transition
  initNav();
  document.addEventListener("astro:after-swap", initNav);
</script>
