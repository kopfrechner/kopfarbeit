---
import type { HTMLAttributes } from "astro/types";

type Props = { disabled?: boolean } & HTMLAttributes<"a">;

const { disabled, class: className, ...attrs } = Astro.props;

const Button = disabled ? "span" : "a";
---

<Button
  aria-disabled={disabled}
  class:list={[
    "group inline-flex items-center gap-1",
    "underline decoration-dashed underline-offset-4 hover:text-accent hover:decoration-solid",
    "transition-all duration-200",
    { "cursor-not-allowed opacity-50": disabled },
    className,
  ]}
  {...attrs}
>
  <slot />
</Button>
